        <kop>
          <label>Artikel</label>
          <nr status="officieel">X</nr>
        <titel status="officieel"><extref status="actief" doc="1.0:v:BWBR0016131" compleet="nee">Uitvoeringsregeling inleners-, keten- en opdrachtgeversaansprakelijkheid 2004</extref></titel></kop>
