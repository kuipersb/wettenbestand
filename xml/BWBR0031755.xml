          <lijst level="single" nr-sluiting="." start="1" type="expliciet">
            <li>
              <li.nr>a.</li.nr>
              <al>
                <nadruk type="cur">regeling:</nadruk> <extref status="actief" doc="1.0:v:BWBR0020324" compleet="nee">Regeling toezichtkosten Wet toezicht accountantsorganisaties</extref>;</al>
            </li>
            <li>
              <li.nr>b.</li.nr>
              <al>
                <nadruk type="cur">wet:</nadruk> <extref status="actief" doc="1.0:v:BWBR0020369" compleet="nee">Wet toezicht financi&#xEB;le verslaggeving</extref>;</al>
            </li>
            <li>
              <li.nr>c.</li.nr>
              <al>
