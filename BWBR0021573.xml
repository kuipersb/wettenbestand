              <tbody valign="top">
                <row>
                  <entry align="left" morerows="0" rotate="0" valign="top">
                    <al>a.</al>
                  </entry>
                  <entry align="left" morerows="0" rotate="0" valign="top">
                    <al>omzet</al>
                  </entry>
                  <entry align="right" morerows="0" rotate="0">
                    <al>:</al>
                  </entry>
                  <entry align="left" morerows="0" rotate="0" valign="top">
                    <al>omzet behaald met de onderneming over het kalenderjaar dat voorafgaat aan het tijdvak waarover wordt geheven;</al>
                  </entry>
                </row>
                <row>
                  <entry align="left" morerows="0" rotate="0" valign="top">
                    <al>b.</al>
                  </entry>
                  <entry align="left" morerows="0" rotate="0" valign="top">
